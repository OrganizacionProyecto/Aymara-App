<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    card_view:cardCornerRadius="12dp"
    card_view:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <ImageView
            android:id="@+id/cart_product_imagen"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="center_horizontal"
            android:scaleType="centerCrop"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:id="@+id/nombreProducto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nombre del producto"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textStyle="bold"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/precioUnitario"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Precio unitario"
            android:textColor="#666666"
            android:paddingTop="4dp" />

        <TextView
            android:id="@+id/totalProducto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Total"
            android:textColor="#666666"
            android:paddingBottom="8dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingVertical="8dp">

            <Button
                android:id="@+id/btnDisminuir"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:backgroundTint="#DDDDDD"
                android:text="-"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/cantidadProducto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1"
                android:layout_marginHorizontal="16dp"
                android:textSize="18sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btnAumentar"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:backgroundTint="#DDDDDD"
                android:text="+"
                android:textSize="18sp"
                card_view:icon="@android:drawable/ic_menu_add"
                card_view:iconTint="@color/VerdeAymara"
                card_view:rippleColor="@color/VerdeAymara" />
        </LinearLayout>

        <Button
            android:id="@+id/btnEliminar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Eliminar"
            android:textColor="#FFFFFF"
            android:backgroundTint="#D32F2F"
            android:layout_gravity="end"
            android:paddingHorizontal="16dp"
            android:layout_marginTop="8dp" />
    </LinearLayout>

</androidx.cardview.widget.CardView>
