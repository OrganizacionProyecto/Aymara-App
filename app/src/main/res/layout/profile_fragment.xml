<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:ignore="MissingClass">

    <TextView
        android:id="@+id/tvProfileTitle"
        android:layout_width="85dp"
        android:layout_height="38dp"
        android:layout_marginTop="28dp"
        android:gravity="center"
        android:text="Perfil"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.049"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvWelcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:gravity="center"
        android:text='Bienvenido, "User"!'
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvProfileTitle" />

    <EditText
        android:id="@+id/etFirst_Name"
        android:layout_width="274dp"
        android:layout_height="56dp"
        android:padding="8dp"
        android:text="(Nombre)"
        android:textSize="16sp"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="202dp" />

    <EditText
        android:id="@+id/etUsername"
        android:layout_width="274dp"
        android:layout_height="51dp"
        android:padding="8dp"
        android:text="Username"
        android:textSize="16sp"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="138dp" />


    <Button
        android:id="@+id/btnEditUsername"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Editar"
        tools:layout_editor_absoluteX="307dp"
        tools:layout_editor_absoluteY="141dp" />

    <EditText
        android:id="@+id/etLast_Name"
        android:layout_width="272dp"
        android:layout_height="51dp"
        android:padding="8dp"
        android:text="(Apellido)"
        android:textSize="16sp"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="267dp" />

    <EditText
        android:id="@+id/etEmail"
        android:layout_width="273dp"
        android:layout_height="52dp"
        android:padding="8dp"
        android:text="admin@gmail.com"
        android:textSize="16sp"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="338dp" />

    <Button
        android:id="@+id/btnEditEmail"
        android:layout_width="70dp"
        android:layout_height="43dp"
        android:textColorHighlight="@color/VerdeAymara"
        android:textColorLink="@color/VerdeAymara"
        app:icon="@android:drawable/ic_menu_edit"
        tools:layout_editor_absoluteX="307dp"
        tools:layout_editor_absoluteY="341dp" />

    <EditText
        android:id="@+id/etAddress"
        android:layout_width="276dp"
        android:layout_height="54dp"
        android:padding="8dp"
        android:text="Direccion falsa 123"
        android:textSize="16sp"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="407dp" />

    <Button
        android:id="@+id/btnEditAddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Editar"
        tools:layout_editor_absoluteX="307dp"
        tools:layout_editor_absoluteY="407dp" />

    <Button
        android:id="@+id/btnChangePassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:backgroundTint="@android:color/holo_green_dark"
        android:text="Cambiar contraseÃ±a"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/etAddress" />

    <Button
        android:id="@+id/btnDeleteAccount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:backgroundTint="@android:color/holo_red_dark"
        android:text="Eliminar Cuenta"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btnChangePassword" />

    <Button
        android:id="@+id/btnOut"
        style="@style/Widget.Material3.Button.OutlinedButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Salir"
        android:textColor="@color/design_default_color_error"
        app:rippleColor="@color/design_default_color_error"
        app:strokeColor="@color/design_default_color_error"
        tools:layout_editor_absoluteX="307dp"
        tools:layout_editor_absoluteY="30dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
